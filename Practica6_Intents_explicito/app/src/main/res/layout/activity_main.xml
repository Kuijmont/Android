<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/textViewAp"
        android:layout_width="166dp"
        android:layout_height="42dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="353dp"
        android:layout_height="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/cabecera"
        android:textSize="22sp"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/buttonAlta"
        android:layout_width="174dp"
        android:layout_height="69dp"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="@string/alta"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonMod"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_below="@+id/textView"
        android:enabled="false"
        android:text="@string/modif"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonAlta"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/background_light"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="@string/datos"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginStart="20dp"
        android:text="@string/vacio"
        android:textSize="22sp"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:text="@string/name"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="204dp"
        android:text="@string/ape"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textViewNom"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_light"
        android:textSize="22sp" />
</RelativeLayout>