<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context=".MainActivityCompra">

    <EditText
        android:id="@+id/textoSuperior"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewCabecera"
        android:layout_alignRight="@+id/textViewCabecera"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_x="0dp"
        android:layout_y="3dp"
        android:backgroundTint="@android:color/background_light"
        android:editable="false"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="@string/app_name"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <EditText
        android:id="@+id/textViewCabecera"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="57dp"
        android:backgroundTint="@android:color/background_light"
        android:editable="false"
        android:text="Pulsa un rato un artículo del listado para modificarlo o eliminarlo.\nTambién puedes usar el menú para añadir un nuevo artículo"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="346dp"
        android:layout_height="399dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="168dp"
        android:layout_x="1dp"
        android:layout_y="213dp"
        android:backgroundTint="@android:color/background_light"
        android:orientation="horizontal">


        <ListView
            android:id="@+id/ListaOpciones"
            android:layout_width="373dp"
            android:layout_height="490dp"
            android:layout_alignStart="@id/textViewCabecera"
            android:layout_alignLeft="@id/textViewCabecera"
            android:divider="@android:color/background_light"
            android:dividerHeight="4px" />
        android:textColor="@android:color/background_light"
        tools:ignore="RtlCompat" />
    </LinearLayout>
</RelativeLayout>